#!/usr/bin/env ruby
# frozen_string_literal: true

require 'bundler/setup'
Bundler.require(:default)
require 'active_support'
require 'active_support/core_ext'

Time.zone = 'Asia/Tokyo'

# lib_directory_path = File.expand_path('../lib', __dir__)
# $LOAD_PATH.unshift(lib_directory_path)

# require 'qiita_trend_stock'

require_relative '../lib/qiita_trend_stock'

qiita_articles = ::QiitaTrendStock::QiitaArticles.new
qiita_articles.fetch!
qiita_articles.stock!

puts ''
print 'qiita_user_status => '
pp qiita_articles.qiita_user_status

puts ''
print 'stocked_uuids => '
pp qiita_articles.stocked_uuids

puts ''
p '( ｰ`дｰ´) おｋ'
